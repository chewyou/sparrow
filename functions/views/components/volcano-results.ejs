<div class="columns is-multiline">

    <% for(var i = 0; i < volcanoes.length; i++) { %>

    <div class="column is-12 volcano-info-box" id="<%= volcanoes[i].title %>">
        <div class="title is-4">
            <div class="volcano-title"><%= volcanoes[i].title %></div>
        </div>
        <!--<div class="subtitle is-6">Long:<%= volcanoes[i].coordLong %>, Lat:<%= volcanoes[i].coordLat %></div>-->

        <div class="columns is-multiline">
            <% for(var j = 0; j < volcanoes[i].properties.length; j++) { %>

                <div class="column is-4">
                    <div class="camera-details">
                        <p><%= volcanoes[i].properties[j].imageTitle %></p>
                        <p><%= volcanoes[i].properties[j].timestamp %></p>
                        <div class="image volcano-image">
                            <img src="<%= volcanoes[i].properties[j].imgFullUrl %>">
                        </div>
                        <div class="modal">
                            <div class="modal-background"></div>
                            <div class="modal-content">
                                <p class="image is-4by3">
                                    <img src="<%= volcanoes[i].properties[j].imgFullUrl %>">
                                </p>
                            </div>
                            <button class="modal-close is-large" aria-label="close"></button>
                        </div>
                    </div>
                </div>

            <% } %>
        </div>

    </div>

    <% } %>

</div>
